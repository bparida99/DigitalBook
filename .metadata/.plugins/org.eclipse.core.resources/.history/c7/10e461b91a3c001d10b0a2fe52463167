package com.cts.dbs.bo.impl;

import java.security.DigestException;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cts.dbs.bo.AuthorBo;
import com.cts.dbs.dao.AuthorDAO;
import com.cts.dbs.entity.Author;
import com.cts.dbs.exception.DigitalBooksException;

@Service
public class AuthorBoImpl implements AuthorBo{
	
	@Autowired
	private AuthorDAO dao;
	

	@Override
	public Author getAuthorById(Long id) throws DigitalBooksException {
		Author author = dao.findById(id).get();
		if(author!=null) {
			throw new DigitalBooksException("Author not found with ID: "+id);
		}
		return author;
	}

