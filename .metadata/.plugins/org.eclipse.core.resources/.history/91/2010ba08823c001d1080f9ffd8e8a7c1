package com.cts.dbs.bo.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cts.dbs.bo.ReaderBo;
import com.cts.dbs.dao.ReaderDAO;
import com.cts.dbs.entity.Reader;
import com.cts.dbs.exception.DigitalBooksException;

@Service
public class ReaderBoImpl implements ReaderBo{
	
	@Autowired
	private ReaderDAO dao;

	@Override
	public Reader findReaderById(Long id) throws DigitalBooksException {
		Reader reader = dao.findById(id).get();
		if(reader==null) {
			throw new DigitalBooksException("Reader not found with id:"+id);
		}
		return reader;
	}

